<h1 class="cover-heading">Проверка предложенного изменения</h1>

<style>
   table.tb { border-collapse: collapse; width:500px; }
   .tb th, .tb td { padding: 5px; border: solid 1px #777; }
   .tb th { background-color: lightblue;}
 </style>
<table class="tb", style="width: 100%">
  <tr>
    <th></th>
    <th>Название</th>
    <th>Цель</th>
    <th>Постоянные условия</th>
    <th>Переменные условия</th>
    <th>Результат</th>
    <th>PMAI-путь</th>
    <th>Пользователь</th>
  </tr>
  <% if (journal.operation != 0) { %>
  <tr>
    <td>До изменения</td>
    <td><%= type_exp.name %></td>
    <td><%= type_exp.goal %></td>
    <td><%= type_exp.ccond %></td>
    <td><%= type_exp.vcond %></td>
    <td><%= type_exp.result %></td>
    <td><%= JSON.stringify(type_exp.path_to_type) %></td>
    <td><%= creator %></td>
  </tr>
  <% } %>
  <% if (journal.operation != 2) { %>
  <tr>
    <td>После изменения</td>
    <td><%= new_type.name %></td>
    <td><%= new_type.goal %></td>
    <td><%= new_type.ccond %></td>
    <td><%= new_type.vcond %></td>
    <td><%= new_type.result %></td>
    <td><%= JSON.stringify(new_type.path_to_type) %></td>
    <td><%= changer %></td>
  </tr>
  <% } %>
</table>

<% if (journal.state == 0) { %>
  <body>
    <div style="font-size:24px">Подтверждение изменений</div><br>
    <form action="/posted" method="post">
      <select name="status">
        <option value=1 selected>Подтвердить</option>
        <option value=2>Отклонить</option>
      </select> <br><br>
      <input type="submit" value="Перейти" />
    </form>
    <script>
      var form = document.querySelector("form");
      form.addEventListener("submit", event => {
          console.log(form.elements.value.value);
      });
    </script> 
  </body>
<% } %>